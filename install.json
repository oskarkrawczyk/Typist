{
  "resources": {
    "body": [
      {
        "type": "script",
        "src": "./dist/typist.js"
      },
      {
        "type": "script",
        "src": "./dist/split.js"
      },
      {
        "type": "script",
        "src": "./dist/helper.js"
      },
      {
        "type": "script",
        "contents": "TypistInstallHelper.init(INSTALL_OPTIONS);"
      }
    ]
  },
  "options": {
    "properties": {
      "location": {
        "order": 0,
        "title": "Location",
        "type": "string",
        "format": "selector",
        "description": "Select the region of text you would like to apply Typist to."
      },
      "typingStyle": {
        "order": 1,
        "title": "Typing style",
        "type": "string",
        "format": "radios",
        "enum": [
          "cursor",
          "selection"
        ],
        "enumNames": {
          "cursor": "Blinking cursor<span class=\"help-text\">Variation text gets typed out and backspaced.</span>",
          "selection": "Selected text<span class=\"help-text\">Variation text is selected and then typed over.</span>"
        },
        "default": "cursor"
      },
      "cursorColor": {
        "order": 2,
        "showIf": {
          "typingStyle": "cursor"
        },
        "title": "Cursor color",
        "type": "string",
        "format": "color",
        "default": "#00a549"
      },
      "selectedColor": {
        "order": 3,
        "showIf": {
          "typingStyle": "selection"
        },
        "title": "Selected text color",
        "type": "string",
        "format": "color",
        "default": "#ffffff"
      },
      "selectedBackgroundColor": {
        "order": 4,
        "showIf": {
          "typingStyle": "selection"
        },
        "title": "Selected text background color",
        "type": "string",
        "format": "color",
        "default": "#00a549"
      },
      "variations": {
        "order": 5,
        "title": "Variations",
        "description": "The alternative text you want to appear in the region selected above. This will replace all the text in that region, but only the text which is different will get “typed out”.",
        "type": "array",
        "items": {
          "type": "string",
          "title": "Variation text"
        }
      }
    }
  }
}
